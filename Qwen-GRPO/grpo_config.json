{
  "reward_model": {
    "name": "Qwen/Qwen3-0.6B"
  },

  "policy_model": {
    "name": "Qwen/Qwen3-0.6B"
  },
  
  "dataset": {
    "path": "../dataset/train_dataset/grpo_mix_dataset"
  },
  
  "lora_config":{
    "r":8,
    "lora_alpha":16
  },

  "train_arg": {
        "dataset":{
            "data_seed": 42,
            "dataloader_num_workers": 4,
            "remove_unused_columns": false,
            "group_by_length": true
        },

        "train":{
            "bf16": true,
            "per_device_train_batch_size": 2,
            "gradient_accumulation_steps": 1,
            "learning_rate": 1e-13, 
            "max_steps": 8,
            "warmup_ratio": 0.25,
            "deepspeed":"deepspeed_config.json",
            "ref_model": {"ref_model_mixup_alpha":0.6},
            "max_completion_length": 4096,
            "generation_batch_size": 8
        },

        "eval":{
            "per_device_eval_batch_size":2,
            "eval_strategy": "no", 
            "eval_steps":4
        },

        "save":{
            "output_dir":"Qwen-OutputDir/GRPO",
            "save_steps":4
        },

        "log":{
            "logging_steps": 4
        },

        "resume_from_checkpoint": false
  }
}