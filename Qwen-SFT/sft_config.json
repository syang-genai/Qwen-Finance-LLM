{
  "model": {
    "name": "Qwen/Qwen3-8B"
  },
  "dataset": {
    "path": "./mixed_dataset"
  },

  "train_arg": {
        "dataset":{
            "data_seed": 42,
            "dataloader_num_workers": 4
        },
        "train":{
            "fp16": true,
            "per_device_train_batch_size": 4,
            "gradient_accumulation_steps": 8,
            "torch_empty_cache_steps": 8,
            "learning_rate": 1e-8, 
            "max_steps": 32,
            "warmup_ratio": 0.25,
            "deepspeed":"./deepspeed_config.json"
        },

        "eval":{
            "per_device_eval_batch_size":4,
            "eval_steps":8
        },
        
        "save":{
            "output_dir":"../Qwen-OutputDir/SFT",
            "save_steps":4
        },

        "log":{
            "logging_steps": 2
        },

        "resume_from_checkpoint": false

  }
}